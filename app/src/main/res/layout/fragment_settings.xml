<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:orientation="vertical"
    tools:context="com.mogo.view.fragments.Settings">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/radiusIV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:src="@drawable/redius_icon" />

        <com.mogo.view.customcontrols.TextViewRegular
            android:id="@+id/radiusTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_toEndOf="@+id/radiusIV"
            android:text="@string/radius"
            android:textSize="16sp"
            tools:ignore="RelativeOverlap" />

        <com.mogo.view.customcontrols.TextViewRegular
            android:id="@+id/raidusMeterTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="40dp"
            android:layout_marginTop="5dp"
            android:text="1Mi"
            android:textSize="16sp" />

        <SeekBar
            android:id="@+id/raidusSeekBar"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/radiusTV"
            android:layout_centerHorizontal="true"
            android:layout_toEndOf="@+id/radiusIV"
            android:max="29"
            android:padding="10dp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_margin="5dp"
        android:background="#000" />


    <RelativeLayout
        android:id="@+id/logoutLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <com.mogo.view.customcontrols.TextViewRegular
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:drawablePadding="20dp"
            android:drawableStart="@drawable/logout_icon"
            android:padding="10dp"
            android:text="@string/logout"
            android:textSize="18sp" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_margin="5dp"
        android:background="#000" />

</LinearLayout>
